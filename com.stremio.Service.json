{
    "app-id": "com.stremio.Service",
    "runtime": "org.gnome.Platform",
    "runtime-version": "43",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
    "command": "/app/bin/stremio-service/service",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin"
    },
    "modules": [{
        "name": "service",
        "buildsystem": "simple",
        "build-options": {
            "env": {
                "CARGO_HOME": "/run/build/service/cargo"
            }
        },
        "build-commands": [
            "cargo --offline fetch --manifest-path Cargo.toml --verbose",
            "cargo --offline build --release --verbose"
        ],
        "post-install": [
            "install -Dm755 ./target/release/service -t /app/bin/stremio-service/",
            "install -Dm755 ./target/release/node -t /app/bin/stremio-service/",
            "install -Dm755 ./target/release/ffmpeg -t /app/bin/stremio-service/",
            "install -Dm644 ./resources/flatpak/com.stremio.Service.desktop /app/share/applications/com.stremio.Service.desktop",
            "install -Dm644 ./resources/flatpak/com.stremio.Service.svg /app/share/icons/hicolor/scalable/apps/com.stremio.Service.svg",
            "install -Dm644 ./resources/flatpak/com.stremio.Service.appdata.xml /app/share/metainfo/com.stremio.Service.appdata.xml"
        ],
        "sources": [
            {
                "type": "dir",
                "path": "."
            },
            "generated-sources.json"
        ],
        "modules": [
            "shared-modules/libappindicator/libappindicator-gtk3-12.10.json"
        ]
    }]
}